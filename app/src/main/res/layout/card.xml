<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="22dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/image_for_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/popolz"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Имя: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Обыкновенный поползень (Sitta europaea)"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Цвет: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Желтая, зеленая, голубая"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Размер: "
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="С воробья"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Семейство: "
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Желтая, зеленая, голубая"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Отряд: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Воробьеобразные"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Род: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Поползни"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Чем кормить: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Семечки арбуза, подсолнечника; несоленое сало"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_width="wrap_content"/>

    </LinearLayout>

</LinearLayout>